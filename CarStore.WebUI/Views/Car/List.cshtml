@using CarStore.WebUI.Models
@using CarStore.WebUI.HtmlHelpers;
@model CarsListViewModel

@{
    ViewBag.Title = "Cars";
}

@foreach (var p in @Model.Cars)
{
    <div>
        <h3>@p.Name</h3>
        <p>@p.Description</p>
        <h4>@p.Price.ToString("$ dol")</h4>
    </div>
}

<div>
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new { page = x }))
</div>